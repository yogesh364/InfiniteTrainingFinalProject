@{
    Layout = null;
    var role = Session["UserRole"]?.ToString();
    var username = Session["UserName"]?.ToString() ?? "Guest";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Online Examination System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f9f9f9;
        }

        .navbar {
            background-color: #007bff !important;
        }

        .navbar-brand {
            color: #fff !important;
            font-weight: bold;
        }

        .nav-link {
            color: #fff !important;
            margin-right: 15px;
        }

            .nav-link:hover {
                color: #d1ecf1 !important;
            }

        footer {
            background-color: #007bff;
            color: #fff;
            padding: 15px 0;
            text-align: center;
            margin-top: 30px;
        }

        .container {
            padding-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Main")">OES</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    @if (Session["UserRole"] == null)
                    {
                        <!-- Guest User -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Main")">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "Main")">Register</a>
                        </li>
                    }
                    else if (role == "admin")
                    {
                        <!-- Admin Links -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Reports", "Admin")">Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Main")">Logout</a>
                        </li>
                    }
                    else if (role == "student")
                    {
                        <!-- Student Links -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Dashboard", "Student")">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Exam", "Student")">Exams</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Main")">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>© @DateTime.Now.Year Online Examination System | All Rights Reserved</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
